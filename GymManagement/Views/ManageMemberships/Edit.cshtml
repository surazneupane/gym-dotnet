@model GymManagement.Models.EditMembershipViewModel

@{
    ViewBag.Title = "Edit Membership";
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml";
}

@section BodyContent {
    <h2>@ViewBag.Title</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mb-3 row">
            <label for="MemberID" class="col-sm-2">Member ID:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="MemberID" name="MemberID" value="@Model.Membership.MemberID" readonly>
            </div>
        </div>

        <div class="mb-3 row">
            <label for="MembershipTypeID" class="col-sm-2">Membership Type:</label>
            <div class="col-sm-4">
                <select class="form-control" id="MembershipTypeID" name="MembershipTypeID" required>
                    @foreach (var membershipType in Model.MembershipTypes)
                    {
                        <option value="@membershipType.ID" @(membershipType.ID == Model.Membership.MembershipTypeID ? "selected" : "")>@membershipType.Type</option>
                    }
                </select>
            </div>
        </div>

        <div class="mb-3 row">
            <label for="StartDate" class="col-sm-2">Start Date:</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" id="StartDate" name="StartDate" value="@Model.Membership.StartDate.ToString("yyyy-MM-dd")" required>
            </div>
        </div>

        <div class="mb-3 row">
            <label for="EndDate" class="col-sm-2">End Date:</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" id="EndDate" name="EndDate" value="@Model.Membership.EndDate.ToString("yyyy-MM-dd")" required>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    }
}
