@model GymManagement.Models.Class

@{
    ViewBag.Title = "Edit Class";
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml";
}

@section BodyContent {
    <h2>@ViewBag.Title</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mb-3 row">
            <label for="ClassName" class="col-sm-2">Class Name:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="ClassName" name="ClassName" value="@Model.ClassName" required>
            </div>
        </div>

     

        <button type="submit" class="btn btn-primary">Save Changes</button>
    }
}
