@model GymManagement.Models.MembershipType

@{
    ViewBag.Title = "Edit Membership Type";
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml";
}

@section BodyContent {
    <h2>@ViewBag.Title</h2>
    <hr />

    @using (Html.BeginForm("Edit", "ManageMembershipTypes", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.ID) <!-- Include the ID as a hidden field to identify the record -->

        <div class="mb-3 row">
            <label for="Type" class="col-sm-1">Type:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="Type" name="Type" value="@Model.Type" required>
            </div>

            <label for="Cost" class="col-sm-1">Cost:</label>
            <div class="col-sm-4">
                <input type="number" step="0.01" class="form-control" id="Cost" name="Cost" value="@Model.Cost" required>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Save Changes</button>
    }
}
